@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Menedżer zadań</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskManagerApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Menedżer zadań</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (@HttpContextAccessor.HttpContext?.Session.GetInt32("Role") == null)
                        {
                            <li class="nav-item">
                                <b><a class="nav-link text-success" asp-area="" asp-controller="Account" asp-action="Register">Rejestracja</a></b>
                            </li>
                            <li class="nav-item">
                                <b><a class="nav-link text-warning" asp-area="" asp-controller="Account" asp-action="Login">Logowanie</a></b>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <b><a class="nav-link text-danger" asp-area="" asp-controller="Account" asp-action="LogOut">Wyloguj</a></b>
                            </li>
                            <li class="nav-item">
                                <b><a class="nav-link text-success" asp-area="" asp-controller="Home" asp-action="AddUser">Dodaj użytkownika</a></b>
                            </li>
                            <li class="nav-item">
                                <b><a class="nav-link text-success" asp-area="" asp-controller="Home" asp-action="AddTask">Dodaj zadanie</a></b>
                            </li>
                            <li class="nav-item">
                                <b><a class="nav-link text-success" asp-area="" asp-controller="Home" asp-action="AddTaskToUser">Dodaj zadanie użytkownikowi</a></b>
                            </li>
                            <li class="nav-item">
                                <b><a class="nav-link text-success" asp-area="" asp-controller="Home" asp-action="UpdateTask">Rozbudowa zadania</a></b>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-white-50">
        <div class="container">
            &copy; 2023 - Menedżer zadań
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
body {
        background-color: #E8E8E8;
    }
</style>