@model RegisterViewModel

@if (@ViewData["Message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Message"]
    </div>
}


<form method="post" asp-action="Register" asp-controller="Account">
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="Wprowadź email" name="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Hasło</label>
        <input type="password" class="form-control" placeholder="Hasło" name="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Potwierdź hasło</label>
        <input type="password" class="form-control" placeholder="Potwierdź hasło" name="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Imię</label>
        <input type="text" class="form-control" placeholder="Imię" name="FirstName">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Nazwisko</label>
        <input type="text" class="form-control" placeholder="Nazwisko" name="LastName">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Numer telefonu</label>
        <input type="text" class="form-control" placeholder="Numer telefonu" name="CellPhone">
        <span asp-validation-for="CellPhone" class="text-danger"></span>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Utwórz konto</button>

</form>